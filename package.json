{
	"name": "svelte-forms",
	"keywords": [
		"svelte",
		"forms",
		"validations",
		"svelte-forms"
	],
	"version": "2.0.7",
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "svelte-kit build && touch build/.nojekyll",
		"package": "pnpm run test && svelte-kit package && node clean-package.js",
		"preview": "svelte-kit preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"test": "jest --runInBand",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"deploy": "pnpm run test && pnpm run build && npx gh-pages -d build -t true",
		"publish": "pnpm run package && cd package && npm publish"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.16.4",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/adapter-static": "^1.0.0-next.21",
		"@sveltejs/kit": "next",
		"@testing-library/jest-dom": "^5.15.1",
		"@testing-library/svelte": "^3.0.3",
		"@types/jest": "^27.0.3",
		"autoprefixer": "^10.3.7",
		"cssnano": "^5.0.8",
		"jest": "^27.4.3",
		"jest-in-case": "^1.0.2",
		"jest-mock-promise": "^1.1.10",
		"markdown-it": "^12.2.0",
		"markdown-it-anchor": "^8.4.1",
		"node-sass": "^6.0.1",
		"postcss": "^8.3.9",
		"postcss-load-config": "^3.1.0",
		"prettier": "^2.4.1",
		"prettier-plugin-svelte": "^2.4.0",
		"svelte": "^3.44.0",
		"svelte-check": "^2.2.6",
		"svelte-jester": "^2.1.5",
		"svelte-preprocess": "^4.9.8",
		"svelte2tsx": "^0.4.10",
		"tailwindcss": "^2.2.19",
		"ts-jest": "^27.0.7",
		"tslib": "^2.3.1",
		"typescript": "^4.5.2",
		"vite-plugin-markdown": "^2.0.2"
	},
	"type": "module",
	"dependencies": {
		"is-promise": "^4.0.0",
		"lodash.kebabcase": "^4.1.1",
		"prism-svelte": "^0.4.7",
		"prismjs": "^1.25.0",
		"svelte-awesome": "^2.4.2",
		"ua-parser-js": "^1.0.2"
	},
	"homepage": "https://chainlist.github.io/svelte-forms/",
	"repository": {
		"type": "git",
		"url": "https://github.com/chainlist/svelte-forms.git"
	},
	"author": {
		"name": "Kevin Guillouard"
	}
}
